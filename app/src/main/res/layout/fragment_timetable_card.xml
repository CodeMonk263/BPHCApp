<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:elevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:id="@+id/cardImg"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="TimeTable"
            android:layout_height="wrap_content"
            android:id="@+id/cardTitle"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/cardImg"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardDesc"
            android:text="Description"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/cardTitle"
            android:layout_toRightOf="@id/cardImg"
            android:textSize="15sp"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/cardClick"
            android:gravity="center"
            android:text="SHOW"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textSize="8dp"
            android:layout_below="@+id/cardDesc"
            android:layout_alignBottom="@+id/cardImg"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>