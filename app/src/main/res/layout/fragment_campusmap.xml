<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fg1_textView1"
        android:layout_width="match_parent"
        android:layout_height="267dp"
        android:gravity="center"
        android:text="This is the Campus Map"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/fg1_ImageView1"
        android:layout_width="match_parent"
        android:layout_height="274dp"
        app:srcCompat="@drawable/bphcmap" />

    <Button
        android:id="@+id/fg1_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonFunc"
        android:text="Click if this is Cool" />

</LinearLayout>